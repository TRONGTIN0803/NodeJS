<body class="body">
    <div class="container">

        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <h2>Update Product</h2>
                <img src="{{sanphams.HinhAnh}}" width="100%" />
                <form action="/suaSanPham" method="post" enctype="multipart/form-data">
                    <div class="mb-3 mt-3">
                        <label for="pwd">Hinh Anh:</label>
                        <input type="file" class="form-control" id="pwd" name="image">
                    </div>
                    <div class="mb-3">
                        <label for="pwd">Ten San Pham:</label>
                        <input type="text" value="{{sanphams.TenSP}}" class="form-control" id="pwd"
                            placeholder="Ten San Pham" name="pswd">
                    </div>
                    <label>Gia San Pham:</label><br>
                    <div class="input-group mb-3">
                        <input type="text" value="{{sanphams.Gia}}" class="form-control" placeholder="Gia San Pham"
                            name="email">

                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                    <button type="button" onclick="window.location.href = '/sanpham'" class="btn btn-primary">Back to
                        list</button>
                </form>
            </div>
            <div class="col-sm-1"></div>
        </div>

    </div>
</body>

</html>