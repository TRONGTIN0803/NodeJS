<body class="body">
    <div class="container">

        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <h2>Update NCC</h2>
                {{#each nhacungcaps}}
                <form action="/nhacungcap/{{this.id}}?_method=PUT" method="post">
                    <label>Tên nhà cung cấp:</label><br>

                    <div class="input-group mb-3">
                        <input type="text" value="{{this.TenNCC}}" class="form-control" placeholder="Tên nhà cung cấp"
                            name="TenNCC">

                    </div>


                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="/nhacungcap"><button type="button" class="btn btn-primary">Back to
                            list</button></a>
                    {{/each}}
                </form>
            </div>
            <div class="col-sm-1"></div>
        </div>

    </div>
</body>

</html>